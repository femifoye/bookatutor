<%= form_for([@user, @message]) do |form| %>
  <% if @message.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@message.errors.count, "error") %> prohibited this message from being saved:</h2>

      <ul>
      <% @message.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.hidden_field :message_to, id: :message_message_to, value:params[:user_id] %>
  </div>

  <div class="field">
    <%= form.label :message_content %>
    <%= form.text_area :message_content, id: :message_message_content, :class => "form-control" %>
  </div>

  <div class="field">
    <%= form.hidden_field :status, id: :message_status, value:"unread" %>
  </div>

  <div class="field">
    <%= form.hidden_field :user_id, id: :message_user_id, value:current_user.id %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
