
<h1>Messages</h1>

<table>
  <thead>
    <tr>
      <th>Message to</th>
      <th>Message from</th>
      <th>Status</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    
      <tr>
      <% @messages.each do |message| %>
        <td><%= message.message_to %></td>
        <td><%= message.message_from %></td>
        <td><%= message.status %></td>
        <td><%= message.user.id %></td>
        <td><%= link_to 'Show', user_message_path(@user, message) %></td>
        <td><%= link_to 'Edit', edit_user_message_path(@user, message) %></td>
        <td><%= link_to 'Destroy', user_message_path(@user, message), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Message', new_user_message_path(@user) %>
