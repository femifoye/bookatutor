<!DOCTYPE html>
<html>
  <head>
    <title>Bookatutor</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_link_tag 'https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>


  <%= render 'layouts/header' %>
  <body>
    <% if notice %><p id="notice" class="alert alert-primary text-center"><%= notice %></p><% end %>
    <% if alert %><p class="alert alert-primary text-center"><%= alert %></p><% end %>
    <%= yield %>
  </body>
  <%= render 'layouts/footer' %>
  <%= debug(params) if Rails.env.development? %>
</html>
