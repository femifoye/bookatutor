<header>
    <div class="site-header container-fluid">
        <div class="logo">
            <h2>Book A Tutor</h2>
        </div>
        <div class="navigation">
          <nav>
            <ul class="navigation-menu">
              <li class="menu-list">Home</li>
              <li class="menu-list">Tutors</li>
              <li class="menu-list">Dashboard</li>
              <% if user_signed_in? %>
                <li class="menu-list"><%= link_to 'Log Out', destroy_user_session_path, method: :delete %></li>
                <li class="menu-list"><%= link_to 'Your Profile', user_profile_url(current_user) %></li>

              <% else %>
                <li class="menu-list"><%= link_to 'Sign In', new_user_registration_path %></li>
              <% end %>
            </ul>
          </nav>
        </div>
    </div>
</header>
