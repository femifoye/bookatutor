
<h1>lessons</h1>

<% if @lesson == nil %>
  <h2> This booking hasn't created a lesson </h2>

<% else %>

<table>
  <thead>
    <tr>
      <th>Start</th>
      <th>End</th>
      <th>Members</th>
      <th>References</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
      <tr>
        <td><%= @lesson.start %></td>
        <td><%= @lesson.end %></td>
        <td><%= @lesson.members %></td>
        <td><%= @lesson.booking_id %></td>
        <td><%= link_to 'End lesson', user_booking_lesson_end_path(@user, @booking, @lesson), method: :post, data: { confirm: 'Are you sure you want to end this lesson?' } %></td>
        <td><%= link_to 'Cancel lesson', user_booking_lesson_path(@user, @booking, @lesson), method: :delete, data: { confirm: 'Are you sure you want to delete this lesson?' } %></td>
      </tr>
  </tbody>
</table>

<br>


<% end %>