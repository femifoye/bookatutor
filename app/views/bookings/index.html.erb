
<h1>Your Bookings</h1>


<% if @bookings == nil %>
 <h2>You have not created a Booking</h2>
 <p><%= link_to "Create New Booking", new_user_booking_path(@user) %></p>

<% else %>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Location</th>
      <th>User Booked</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bookings.each do |booking| %>
      <tr>
        <td><%= booking.date %></td>
        <td><%= booking.location %></td>
        <td><%= booking.user_booked %></td>
        <td><%= booking.user %></td>
        <td><%= link_to 'Show', user_booking_path(@user, booking) %></td>
        <td><%= link_to 'Edit', edit_user_booking_path(@user, booking) %></td>
        <td><%= link_to 'Destroy', user_booking_path(@user, booking), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Booking', new_user_booking_path(@user) %>

<% end %>